<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_github_searcher2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitHub Searcher"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/screen2_iv"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_github_searcher2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/screen2_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/screen2_iv"
        app:layout_constraintStart_toEndOf="@id/screen2_iv"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"/>
<TextView
        android:id="@+id/screen2_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/screen2_username"
        app:layout_constraintStart_toStartOf="@id/screen2_username"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/screen2_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/screen2_email"
        app:layout_constraintStart_toStartOf="@id/screen2_email"
        android:layout_marginTop="10dp"/>
<TextView
        android:id="@+id/screen2_joindate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Date"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/screen2_location"
        app:layout_constraintStart_toStartOf="@id/screen2_location"
        android:layout_marginTop="10dp"/>
<TextView
        android:id="@+id/screen2_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/screen2_joindate"
        app:layout_constraintStart_toStartOf="@id/screen2_location"
        android:layout_marginTop="10dp"/>
<TextView
        android:id="@+id/screen2_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/screen2_followers"
        app:layout_constraintStart_toStartOf="@id/screen2_location"
        android:layout_marginTop="10dp"/>
  

</androidx.constraintlayout.widget.ConstraintLayout>